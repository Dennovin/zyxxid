            <div class="add-item-form">
              <div class="input-row">
                <label>Class Name:</label>
                <input type="text" name="name" />
              </div>

              <div class="input-row">
                <label>Level:</label>
                <input type="number" name="level" />
              </div>

              <div class="submit-row">
                <button class="save">Save</button>
                <button class="save-add">Save and Add Another</button>
              </div>
            </div>
