        <div class="section spellbook" name="spellbook">
          <div class="spell-list">
            <div class="spell-tags-selector level-spells visible">
              <div class="spell-tags-header level-header">Spells from Classes</div>
              <div class="spell-tag checkbox-value selected" value="bard"><div class="checkbox-icon"></div><div class="name">Bard</div></div>
              <div class="spell-tag checkbox-value selected" value="cleric"><div class="checkbox-icon"></div><div class="name">Cleric</div></div>
              <div class="spell-tag checkbox-value selected" value="druid"><div class="checkbox-icon"></div><div class="name">Druid</div></div>
              <div class="spell-tag checkbox-value selected" value="paladin"><div class="checkbox-icon"></div><div class="name">Paladin</div></div>
              <div class="spell-tag checkbox-value selected" value="ranger"><div class="checkbox-icon"></div><div class="name">Ranger</div></div>
              <div class="spell-tag checkbox-value selected" value="sorcerer"><div class="checkbox-icon"></div><div class="name">Sorcerer</div></div>
              <div class="spell-tag checkbox-value selected" value="warlock"><div class="checkbox-icon"></div><div class="name">Warlock</div></div>
              <div class="spell-tag checkbox-value selected" value="wizard"><div class="checkbox-icon"></div><div class="name">Wizard</div></div>
            </div>

            {% for level in spells.keys()|sort %}
            <div class="level-spells">
            <div class="level-header">{{ "Cantrips" if level == "0" else "Level " + level }}</div>
            {% for spell in spells[level] %}
            <div class="spell-name checkbox-value {% for tag in spell["tags"] %} spell-tag-{{ tag }}{% endfor %}" spellid="{{ spell["id"] }}"><div class="checkbox-icon"></div><div class="name">{{ spell["name"] }}</div></div>
            {% endfor %}
            </div>
            {% endfor %}
          </div>

          <div class="spell-details">
            <div class="spell-detail-row spell-detail" name="title"></div>
            <div class="spell-detail-row spell-detail" name="school"></div>
            <div class="spell-detail-row">Casting Time: <div class="spell-detail" name="casttime"></div></div>
            <div class="spell-detail-row">Range: <div class="spell-detail" name="range"></div></div>
            <div class="spell-detail-row">Components: <div class="spell-detail" name="components"></div></div>
            <div class="spell-detail-row">Duration: <div class="spell-detail" name="duration"></div></div>
            <div class="spell-detail" name="description"></div>
          </div>

        </div>
