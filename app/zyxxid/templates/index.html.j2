          <div class="input-list" name="spellclasses">
            <div class="title-row">
              <div class="title">Spellcasting Classes</div>
              <button class="add-item" />
            </div>
            <ul></ul>

            <div class="add-item-form">
              <div class="input-row">
                <label>Class Name:</label>
                <input type="text" name="name" />
              </div>

              <div class="input-row">
                <label>Spell Modifier:</label>
