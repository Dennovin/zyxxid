        <div class="section" name="inventory">
          <div class="input-list" name="items">
            <div class="title-row">
              <div class="title">Items</div>
              <button class="add-item" />
            </div>
            <ul></ul>

            <div class="add-item-form">
              <div class="input-row">
                <label>Name:</label>
